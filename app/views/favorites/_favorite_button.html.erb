<!--お気に入りボタンの部分テンプレート article: @article favorite: @favorite-->

<% if article.favorited_by?(current_user) %>
  <%= link_to article_favorite_path(article, favorite), method: :delete, remote: true do %>
    <button type="button" class="btn btn-default btn-lg article-show-button-favorite">
      <i class="fa fa-heart" aria-hidden="true" style="color: #F5CC50;"></i>
      お気に入り登録中
    </button>
  <% end %>
<% else %>
  <%= link_to article_favorites_path(article), method: :post, remote: true do %>
    <button type="button" class="btn btn-default btn-lg article-show-button-favorite">
      <i class="fa fa-heart-o" aria-hidden="true" style="color: #F5CC50;"></i>
      お気に入り登録
    </button>
  <% end %>
<% end %>
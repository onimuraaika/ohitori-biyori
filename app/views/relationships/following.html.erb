<!--フォローユーザー一覧表示画面-->

<div class="container follow-index">

  <!--ログインユーザー表示-->
  <%= render 'users/current_user_show', user: @user %>

  <h2 class="row follow-index-title">フォローしている人</h2>

  <!--フォローユーザー一覧表示-->
  <% @user.following.each do |user| %>
    <div class="row follow-index-user">
      <div class="col-sm-4 follow-index-user-image">
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, size: "150x150", fallback: "noimage.jpg", size: '150x150' %>
        <% end %>
      </div>
      <div class="col-sm-5 follow-index-user-details">
        <div class="follow-index-user-nickname">
          <%= user.nickname %> <span class="follow-index-user-nickname-san">さん</span>
        </div>
        </br>
        <div class="follow-index-user-living_alone_month">
          ひとり暮らし歴：<%= user.living_alone_month %>ヶ月目
        </div>
      </div>

      <!--フォローボタン-->
      <div class="col-sm-2 follow-index-user-follow_button">
        <% if user.followed_by?(current_user) %>
          <%= link_to user_relationships_path(user.id), method: :delete do %>
            <button type="button" class="btn btn-default btn-lg follow-index-user-follow_button-unfollow">
              <i class="fa fa-user" aria-hidden="true" style="color: #F5CC50;"></i>
              ファン
            </button>
          <% end %>
        <% else %>
          <%= link_to user_relationships_path(user.id), method: :post do %>
            <button type="button" class="btn btn-default btn-lg follow-index-user-follow_button-follow">
              <i class="fa fa-user-o" aria-hidden="true" style="color: #F5CC50;"></i>
              ファンになる
            </button>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!--ページング-->
  <div class="text-center"><%= paginate @users %></div>

</div>
<!--フォロワー一覧-->
<div class="container following-index">

  <!--ログインユーザー表示-->
  <div class="row">
    <%= render 'users/current_user_show', user: @user %>
  </div>

  <div class="row following-index-title">
    <hr class="border-line"/>
    <h2>わたしのファン</h2>
    <hr class="border-line"/>
  </div>

  <!--フォローユーザー一覧表示-->
  <% @users.each do |user| %>
    <div class="row following-index-user">
      <div class="col-sm-4 following-index-user-image">
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, size: "150x150", style: "border-radius:15px", fallback: "no_profile_image.jpg" %>
        <% end %>
      </div>
      <div class="col-sm-5 following-index-user-details">
        <div class="following-index-user-nickname">
          <%= user.nickname %> <span class="follow-index-user-nickname-san">さん</span>
        </div></br>
        <div class="following-index-user-living_alone_month">
          ひとり暮らし歴：<%= user.living_alone_month %>ヶ月目
        </div>
      </div>
    </div>
  <% end %>

  <!--ページング-->
  <div class="text-center following-article-index-paginate"><%= paginate @users %></div>

</div>
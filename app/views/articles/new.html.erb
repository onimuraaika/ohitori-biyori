<!--新規投稿画面-->

<div class="container new-article">

  <!--新規投稿-->
  <h2 class="new-article-title">投稿する</h2>

  <%= form_with model:@article, local:true do |f| %>

    <!--エラーメッセージ -->

    <div class="row new-article-row">
      <h3 class="new-article-subtitle">① 写真の選択</h3></br>
      <% if @article.image.present? %>
        <%= attachment_image_tag @article.image, id: :img_preview, size: "250x250" %>
      <% else %>
        <%= image_tag "no_image.jpg", size: "250x250", id: :img_preview %>
      <% end %>
      </br>
      <%= f.attachment_field :image, size: "250x250", class: "new-article-image", id: :article_img %>
    </div>
    </br>
    <div class="row new-article-row">
      <h3 class="new-article-subtitle">② タイトル</h3>
      <div class="form-group">
        <%= f.text_field :title, class:"form-control input-lg", placeholder:"例：わたしの休日のすごしかた" %>
      </div>
    </div>
    </br>
    <div class="row new-article-row">
      <h3 class="new-article-subtitle">③ ジャンル</h3>
      <div class="form-group input-lg">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "　ジャンルを選択してください　"  %>
      </div>
    </div>
    </br>
    <div class="row new-article-row">
      <h3 class="new-article-subtitle">④ タグ</h3>
      <div class="form-group">
        <%= f.text_field :tag_list, value: @article.tag_list.join(','), class:"form-control input-lg", placeholder:"例：cafe,休日,ごはん,節約" %>
      </div>
    </div>
    </br>
    </br>
    <div class="row new-article-row">
      <h3 class="new-article-subtitle">⑤ 伝えたいこと</h3>
      <div class="form-group">
        <%= f.text_area :body, class:"form-control", placeholder:"例：○○公園の中にある○○カフェでゆっくりするのが日課です。" %>
      </div>
    </div>
    </br>
    <div class="actions new-article-button">
      <%= f.submit "　　　　　　　　　　　投稿する　　　　　　　　　　　", class:"btn btn-lg btn-default" %>
    </div>

  <% end %>

</div>
<!--他人のユーザー表示(user)-->

<div class="col-sm-7 user-show-info-box">
  <div class="user-show-info-image">
    <%= link_to user_path(user) do %>
      <%= attachment_image_tag user, :profile_image, class: "user-show-info-image-size", fallback: "no_profile_image.jpg" %>
    <% end %>
  </div>

  <div class="user-show-info-details">
    <div class="user-show-info-nickname">
      <%= user.nickname %>
    </div></br>
    <div class="user-show-info-living_alone_month">
      ひとり暮らし歴：<%= user.living_alone_month %>ヶ月目
    </div></br>
    <div class="user-show-info-introduction">
      <%= simple_format(user.introduction) %>
    </div>
  </div>
</div>
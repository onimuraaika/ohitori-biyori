<!--ユーザー表示(他人)の部分テンプレート user: @user-->

<div class="col-sm-4 user-show-info-image">
  <%= link_to user_path(user) do %>
    <%= attachment_image_tag user, :profile_image, size: "150x150", format: 'jpeg', fallback: "noimage.jpg", size: '150x150' %>
  <% end %>
</div>
<div class="col-sm-5 user-show-info-details">
  <div class="user-show-info-nickname">
    <%= user.nickname %>
  </div>
  </br>
  <div class="user-show-info-living_alone_month">
    ひとり暮らし歴：<%= user.living_alone_month %>ヶ月
  </div>
  </br>
  <div class="user-show-info-living_alone_month">
    <%= user.introduction %>
  </div>
</div>

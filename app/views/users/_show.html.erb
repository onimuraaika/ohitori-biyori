<!--ユーザー表示(他人)の部分テンプレート user: @user-->

<div class="row user-show-info">

  <div class="col-sm-4 user-show-info-image">
    <%= link_to user_path(user) do %>
      <%= attachment_image_tag user, :profile_image, size: "150x150", format: 'jpeg', fallback: "noimage.jpg", size: '150x150' %>
    <% end %>
  </div>
  <div class="col-sm-4 user-show-info-details">
    <div class="user-show-info-nickname">
      <%= user.nickname %>
    </div>
    </br>
    <div class="user-show-info-living_alone_month">
      ひとり暮らし歴：<%= user.living_alone_month %>ヶ月
    </div>
    <div class="user-show-info-living_alone_month">
      <%= user.introduction %>
    </div>
  </div>

  <!--フォローボタン-->
  <div class="col-sm-4 user-show-info-follow_button">
    <% if current_user != user %> <!--自分には表示しない-->
      <% if user.followed_by?(current_user) %>
        <%= link_to user_relationships_path(user.id), method: :delete do %>
          <button type="button" class="btn btn-default btn-lg user-show-info-follow_button-unfollow">
            <i class="fa fa-user" aria-hidden="true" style="color: #F5CC50;"></i>
            ファン
          </button>
        <% end %>
      <% else %>
        <%= link_to user_relationships_path(user.id), method: :post do %>
          <button type="button" class="btn btn-default btn-lg user-show-info-follow_button-follow">
            <i class="fa fa-user-o" aria-hidden="true" style="color: #F5CC50;"></i>
            ファンになる
          </button>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
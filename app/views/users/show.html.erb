<!--マイページ・ユーザー詳細-->

<div class="container user-show">

  <div class="row user-show-info">
    <% if @user == current_user %>
      <!--マイページとして見ている時-->
      <%= render 'users/current_user_show', user: @user %>
    <% else %>
    <div class="user-show-info-others">
      <div>
        <!--ユーザー詳細として見ている時-->
        <%= render 'users/show', user: @user %>
      </div>
      <!--フォローボタン-->
      <div id="relationship_<%= @user.id %>">
        <%= render 'relationships/follow_button', user: @user %>
      </div>
    </div>
    <% end %>
  </div>

  <!--投稿一覧-->
  <div class="user-show-article-index">
    <%= render 'articles/article_index', articles: @articles %>
  </div>

  <!--ページング-->
  <div class="text-center user-show-article-index-paginate"><%= paginate @articles %></div>

</div>


<!--ヘッダーの部分テンプレート-->

<div class="container-fluid header">

  <% if user_signed_in? %>
    <header>
      <div class="header-logo">
        <%= link_to articles_path do %>
          <%= image_tag 'logo.jpg', class: "logo_image", :alt => 'ロゴ画像、みんなの投稿一覧ページに飛べます。' %>
        <% end %>
      </div>
      <div class="header-button">
        <%= link_to user_path(current_user) do %>
          <button type="button" class="btn btn-default btn-lg header-button-my_page">
            <i class="fa fa-sun-o" aria-hidden="true" style="color: #F5CC50; font-size: 30px;"></i></br>
            マイページ
          </button>
        <% end %>
      </div>
      <div class="header-button">
        <%= link_to new_article_path do %>
          <button type="button" class="btn btn-default btn-lg header-button-post">
            <i class="fa fa-pencil" aria-hidden="true" style="color: #F5CC50; font-size: 30px;"></i></br>
            投稿する
          </button>
        <% end %>
      </div>
      <div class="header-button">
        <%= link_to article_favorites_path(user) do %>
          <button type="button" class="btn btn-default btn-lg header-button-favorite">
            <i class="fa fa-heart" aria-hidden="true" style="color: #F5CC50; font-size: 30px;"></i></br>
            お気に入り
          </button>
        <% end %>
      </div>
      <div class="header-button">
        <%= link_to destroy_user_session_path, method: :delete do %>
          <button type="button" class="btn btn-default btn-lg header-button-logout">
            <i class="fa fa-sign-out" aria-hidden="true" style="color: #F5CC50; font-size: 30px;"></i></br>
            ログアウト
          </button>
        <% end %>
      </div>
    </header>
  <% else %>
    <header>
      <div class="header-logo">
        <%= link_to root_path do %>
          <%= image_tag 'logo.jpg', class: "logo_image", :alt => 'ロゴ画像、トップページに飛べます。' %>
        <% end %>
      </div>
      <div class="header-button">
        <%= link_to homes_about_path do %>
          <button type="button" class="btn btn-default btn-lg header-button-about">
            おひとり</br>
            日和とは
          </button>
        <% end %>
      </div>
      <div class="header-button">
        <%= link_to user_session_path do %>
          <button type="button" class="btn btn-default btn-lg header-button-post">
            <i class="fa fa-sign-in" aria-hidden="true" style="color: #8CC3E2; font-size: 30px;"></i></br>
            ログイン
          </button>
        <% end %>
      </div>
      <div class="header-button">
        <%= link_to new_user_registration_path do %>
          <button type="button" class="btn btn-default btn-lg header-button-favorite">
            <i class="fa fa-user-plus" aria-hidden="true" style="color: #8CC3E2; font-size: 30px;"></i></br>
            新規登録
          </button>
        <% end %>
      </div>
    </header>
  <% end %>

</div>
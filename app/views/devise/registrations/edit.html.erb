<!--パスワード変更画面-->

<div class="container signup">
  <div class="row signup-form">

    <div class="row signup-form-title">
      <hr class="border-line"/>
      <h2>パスワード変更</h2>
      <hr class="border-line"/>
    </div>

    <%= form_with model:@user, url: registration_path(@user), local: true do |f| %>

      <!--エラーメッセージ-->
      <%= render 'layouts/error_message', model: @user %>

      <form class="form-horizontal">
        <div class="form-group">
          <label class="control-label signup-label"><%= f.label "新しいパスワード(必須)" %></label></br>
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"半角英数字6文字以上", class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label login-label"><%= f.label "新しいパスワード確認(必須)" %></label></br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"半角英数字6文字以上", class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <label class="control-label login-label"><%= f.label "現在のパスワード(必須)" %></label></br>
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"半角英数字6文字以上", class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <div class="actions signup-form-button">
            <%= f.submit "パスワードを変更する", class: "btn btn-default btn-block btn-lg" %>
           </div>
        </div>
      </form>
    <% end %>

  </div>
</div>
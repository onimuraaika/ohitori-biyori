<!--コメント表示(article)-->

<% article.article_comments.each do |article_comment| %>
  <% unless article_comment.user.is_deleted %>
    <div class="row article-show-comment">
      <div class="col-xs-4 article-show-comment-image">
        <%= link_to user_path(article_comment.user) do %>
          <%= attachment_image_tag article_comment.user, :profile_image, class: "article-show-comment-image-size", fallback: "no_profile_image.jpg" %>
        <% end %>
      </div>
      <div class="col-xs-5 article-show-comment-info">
        <div class="article-show-comment-nickname">
          <%= article_comment.user.nickname %>
        </div>
        </br>
        <div class="article-show-comment-comment">
          <%= simple_format(article_comment.comment) %>
        </div>
      </div>
      <div class="col-xs-1 article-show-comment-destroy">
        <% if current_user == article_comment.user %>
          <%= link_to article_article_comment_path(article_comment.article_id, article_comment.id), method: :delete, remote: true do %>
            <i class="fa fa-trash-o fa-2x" style="color: #BDB29D;" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
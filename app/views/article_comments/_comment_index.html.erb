<!--コメント表示の部分テンプレートarticle: @article-->

<% article.article_comments.each do |article_comment| %>
  <div class="row article-show-comment">
    <div class="col-sm-4 article-show-comment-image">
      <%= link_to user_path(article_comment.user) do %>
        <%= attachment_image_tag article_comment.user, :profile_image, size: "120x120", fallback: "noimage.jpg", size: "120x120" %>
      <% end %>
    </div>
    <div class="col-sm-4 article-show-comment-info">
      <div class="article-show-comment-nickname">
        <%= article_comment.user.nickname %>
      </div>
      </br>
      <div class="article-show-comment-comment">
        <%= simple_format(article_comment.comment) %>
      </div>
    </div>
    <div class="col-sm-4 article-show-comment-destroy_button">
      <% if current_user == article_comment.user %>
        <%= link_to article_article_comment_path(article_comment.article_id, article_comment.id), class: 'article-show-comment-button', method: :delete, remote: true do %>
          <i class="fa fa-trash-o fa-2x" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>